<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SUGEXX</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            background: radial-gradient(ellipse at bottom, #0d0d1a 0%, #000 100%);
            position: relative;
            color: #fff;
            overflow: hidden;
        }

        .stars {
            width: 2px;
            height: 2px;
            background: white;
            position: absolute;
            animation: twinkle 5s infinite ease-in-out;
            border-radius: 50%;
            opacity: 0.8;
        }

        @@keyframes twinkle {
            0%, 100% {
                opacity: 0.2;
            }

            50% {
                opacity: 1;
            }
        }

        .meteor {
            width: 3px;
            height: 10px;
            background: linear-gradient(45deg, #ff0, #f00);
            position: absolute;
            opacity: 0.9;
            animation: meteorAnimation 2s linear infinite;
        }

        @@keyframes meteorAnimation {
            0% {
                transform: translateY(-100vh) translateX(100vw) rotate(45deg);
                opacity: 1;
            }

            100% {
                transform: translateY(100vh) translateX(-100vw) rotate(45deg);
                opacity: 0;
            }
        }

        .form-signin {
            position: relative;
            z-index: 2;
            max-width: 400px;
            padding: 40px;
            background: rgba(15, 15, 25, 0.6);
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
            animation: fadeIn 1s ease;
            opacity: 0.85;
        }

        @@keyframes fadeIn {
            from {
                transform: scale(0.95);
                opacity: 0;
            }

            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        .btn-glow {
            background-color: #00bfff;
            color: white;
            transition: all 0.3s ease;
            border: none;
        }

            .btn-glow:hover {
                box-shadow: 0 0 15px 4px rgba(0, 191, 255, 0.6);
            }

        .register-link {
            display: inline-block;
            margin-top: 15px;
            color: #00f7ff;
            text-decoration: none;
            position: relative;
        }

            .register-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -3px;
                width: 100%;
                height: 2px;
                background: #00f7ff;
                transform: scaleX(0);
                transition: transform 0.4s ease;
                transform-origin: left;
            }

            .register-link:hover::after {
                transform: scaleX(1);
            }

        .icon-wrapper {
            color: #00f7ff;
            text-align: center;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            position: relative;
        }

            .icon-wrapper i {
                font-size: 1.8rem;
                transition: transform 0.4s ease, box-shadow 0.4s ease;
            }

        .icon-label {
            display: block;
            font-size: 0.9rem;
            margin-top: 4px;
            color: #d7c4a3;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .icon-wrapper:hover i {
            transform: translateY(-6px) scale(1.05);
            box-shadow: 0 0 15px rgba(0, 247, 255, 0.6), 0 0 20px rgba(0, 247, 255, 0.4), 0 0 30px rgba(0, 247, 255, 0.2), 0 0 40px rgba(0, 247, 255, 0.1);
        }

        .icon-wrapper:hover .icon-label {
            opacity: 1;
        }

        .sag-ust-kose {
            position: fixed;
            top: 15px;
            right: 20px;
            color: dodgerblue;
            font-size: 16px;
            z-index: 999;
        }
    </style>
</head>
<body>
    <script>
        for (let i = 0; i < 10; i++) {
            let meteor = document.createElement("div");
            meteor.classList.add("meteor");
            meteor.style.top = Math.random() * 100 + "vh";
            meteor.style.left = Math.random() * 100 + "vw";
            meteor.style.animationDuration = (Math.random() * 3 + 2) + "s";
            document.body.appendChild(meteor);
        }

        for (let i = 0; i < 100; i++) {
            let star = document.createElement("div");
            star.classList.add("stars");
            star.style.top = Math.random() * 100 + "vh";
            star.style.left = Math.random() * 100 + "vw";
            star.style.animationDuration = (2 + Math.random() * 4) + "s";
            document.body.appendChild(star);
        }
    </script>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <div class="sag-ust-kose">
                    @ViewBag.Sure
                </div>

                    <h2>@Html.ActionLink("Anasayfa", "Index", "Ogrs", new { area = "" }, new { @class = "nav-link text-center" })</h2>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="position-fixed bottom-0 start-0 end-0 " style="background-color: rgba(43, 43, 43,0.3); z-index: 999;">
            <div class="d-flex justify-content-between align-items-center w-100 px-4">

                <p class="mb-0" style="color: #d7c4a3;">
                    &copy; @DateTime.Now.Year - Made by Ahmet Şekeroymağı
                </p>

                <div class="d-flex align-items-center gap-4">

                    <a href="mailto:ahmetsekeroymagi01@gmail.com" class="icon-wrapper text-decoration-none">
                        <i class="bi bi-envelope-fill"></i>
                        <span class="icon-label">Email</span>
                    </a>

                    <a href="https://github.com/AhmetSekeroymagi" target="_blank" class="icon-wrapper text-decoration-none">
                        <i class="bi bi-github"></i>
                        <span class="icon-label">GitHub</span>
                    </a>

                    <a href="https://www.linkedin.com/in/ahmet-%C5%9Fekeroyma%C4%9F%C4%B1-9b150b264/" target="_blank" class="icon-wrapper text-decoration-none">
                        <i class="bi bi-linkedin"></i>
                        <span class="icon-label">LinkedIn</span>
                    </a>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
