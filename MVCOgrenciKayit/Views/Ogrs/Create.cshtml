@model MVCOgrenciKayit.Models.Ogr

@{
    ViewBag.Title = "Create";
}

<style>
    h3 {
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
        margin-bottom: 20px;
    }

    .form-horizontal {
        background-color: rgba(0, 0, 0, 0.4);
        padding: 30px;
        border-radius: 12px;
        backdrop-filter: blur(5px);
        color: white;
    }

    .form-group label {
        color: #66d9ef;
    }

    .form-control {
        background-color: #1e1e1e;
        color: #ffffff;
        border: 1px solid #555;
        border-radius: 6px;
    }

        .form-control::placeholder {
            color: #888;
        }

    .btn-submit {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #0056b3;
        }

    .link-back a {
        background-color: #28a745;
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
    }

        .link-back a:hover {
            background-color: #218838;
        }

    .text-danger {
        color: #ff4d4d !important;
    }
</style>

<h3>Yeni Öğrenci Kaydı</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mb-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OgrAd)
            @Html.EditorFor(model => model.OgrAd, new { htmlAttributes = new { @class = "form-control", placeholder = "Ad", required = "required" } })
            @Html.ValidationMessageFor(model => model.OgrAd, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OgrSoyad)
            @Html.EditorFor(model => model.OgrSoyad, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyad", required = "required" } })
            @Html.ValidationMessageFor(model => model.OgrSoyad, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OgrMail)
            @Html.EditorFor(model => model.OgrMail, new { htmlAttributes = new { @class = "form-control", placeholder = "Mail", required = "required" } })
            @Html.ValidationMessageFor(model => model.OgrMail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OgrFotoğraf)
            @Html.EditorFor(model => model.OgrFotoğraf, new { htmlAttributes = new { @class = "form-control", placeholder = "Fotoğraf" } })
            @Html.ValidationMessageFor(model => model.OgrFotoğraf, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OgrAdres)
            @Html.EditorFor(model => model.OgrAdres, new { htmlAttributes = new { @class = "form-control", placeholder = "Adres", required = "required" } })
            @Html.ValidationMessageFor(model => model.OgrAdres, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-5">
            <input type="submit" value="Kaydet" class="btn-submit" />
        </div>
    </div>
}

<div class="link-back" style="margin-top:20px;">
    @Html.ActionLink("Öğrenci Listesine Git", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
